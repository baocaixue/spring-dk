<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd"
       default-lazy-init="true" ><!--default-init-method="init" 当所有bean具有相同的init-method时-->
    <bean id="singerOne" class="com.isaac.ch4.Singer" init-method="init" p:name="John Mayer" p:age="39"/>
    <bean id="singerTwo" class="com.isaac.ch4.Singer" init-method="init" p:age="31"/>
    <bean id="singerThree" class="com.isaac.ch4.Singer" init-method="init" p:name="John Butler"/>
</beans>